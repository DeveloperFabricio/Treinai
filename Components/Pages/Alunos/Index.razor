@page "/alunos"
@inherits IndexPage

<MudText Typo="Typo.h3">Alunos</MudText>

<MudButton Variant="Variant.Filled"
           StartIcon="@Icons.Material.Filled.Add"
           Color="Color.Info"
           Size="Size.Large"
           Href="/alunos/create"
           Class="mt-md-4 mb-4">Novo Auno</MudButton>

<MudDataGrid Items="@Alunos" Filterable="false" SortMode="@SortMode.Single" Groupable="false">
    <Columns>
        <PropertyColumn Property="x => x.Nome" />
        <PropertyColumn Property="x => x.Documento" />
        <PropertyColumn Property="x => x.Email" />
        <PropertyColumn Property="x => x.Celular" />
        <PropertyColumn Property="x => x.DataNascimento" Format="dd/MM/yyyy" />
        <TemplateColumn>
            <CellTemplate>
                <MudStack Row>
                    <MudFab Size="Size.Small"
                            Label="Editar"
                            hidden="@HideButtons"
                            @onclick="@(() => GoToUpdate(context.Item.Id))"
                            StartIcon="@Icons.Material.Filled.Edit"
                            Color="Color.Success" />

                    <MudFab Size="Size.Small"
                            Label="Excluir"
                            hidden="@HideButtons"
                            @onclick="@(() => DeleteAluno(context.Item))"
                            StartIcon="@Icons.Material.Filled.Delete"
                            Color="Color.Error" />
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
</MudDataGrid>