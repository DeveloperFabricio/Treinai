@page "/professores/create"
@using Microsoft.AspNetCore.Authorization
@inherits CreateProfessorPage

@attribute [Authorize(Roles = "Gestor")]

<PageTitle>Professores</PageTitle>

<MudText Typo="Typo.h3">Cadastro de Professores</MudText>

<MudPaper Class="pa-8 mt-4">
    <EditForm Model= "@InputModel" OnValidSubmit="OnValidSubmitAsync">
        <DataAnnotationsValidator />

        <MudTextField Label="Nome"
                      Variant="Variant.Outlined"
                      HelperText="Campo Obrigatório"
                      @bind-Value="InputModel.Nome"
                      For="@(() => InputModel.Nome)" />

        <MudTextField Label="Documento"
                      Variant="Variant.Outlined"
                      HelperText="Campo Obrigatório"
                      @bind-Value="InputModel.Documento"
                      Mask="@(new PatternMask("000.000.000-00"))"
                      For="@(() => InputModel.Documento)" />

        <MudTextField Label="CREF"
                      Variant="Variant.Outlined"
                      HelperText="Campo Obrigatório"
                      @bind-Value="InputModel.Cref"
                      Mask="@(new PatternMask("aa-000000"))"
                      For="@(() => InputModel.Cref)" />

        <MudTextField Label="Celular"
                      Variant="Variant.Outlined"
                      HelperText="Campo Obrigatório"
                      @bind-Value="InputModel.Celular"
                      Mask="@(new PatternMask("(00) 0 0000-0000"))"
                      For="@(() => InputModel.Celular)" />

        <MudSelect Label="Tipo de Exercício"
                   Variant="Variant.Outlined"
                   @bind-Value="InputModel.TipoDeExercicioId"
                   AnchorOrigin="Origin.BottomCenter"
                   For="@(() => InputModel.TipoDeExercicioId)">

            @foreach (var tipodeExercicio in TiposDeExercicios)
            {
                <MudSelectItem Value="@tipodeExercicio.Id">@tipodeExercicio.Nome</MudSelectItem>
            }

        </MudSelect>

        <MudDivider Class="m-4" />
        <MudButton Variant="Variant.Filled"
                   StartIcon="@Icons.Material.Filled.Save"
                   Color="Color.Info"
                   Size="Size.Large"
                   ButtonType="ButtonType.Submit">
            SALVAR
        </MudButton>

    </EditForm>
</MudPaper>
