@page "/professores"
@inherits IndexProfessorPage

<PageTitle>Professores</PageTitle>

<MudText Typo="Typo.h3">Professores</MudText>

<MudButton Variant="Variant.Filled"
           StartIcon="@Icons.Material.Filled.Add"
           Color="Color.Info"
           Size="Size.Large"
           Href="/professores/create"
           Class="mt-md-4 mb-4">
           Novo Professor
</MudButton>

<MudDataGrid Items ="@Medicos" Filterable="false" SortMode="@SortMode.Single" Groupable="false">

    <Columns>
        <PropertyColumn Property="x => x.Nome"/>
        <PropertyColumn Property="x => x.Documento"/>
        <PropertyColumn Property="x => x.Vref" Title="CREF"/>
        <PropertyColumn Property="x => x.Celular"/>
        <PropertyColumn Property="x => x.TipoDeExercicio.Nome" Title="Tipo de Exercicio"/>
            <TemplateColumn CellClass="d-flex justify-center">
                <CellTemplate>
                <MudStack Row>
                    <MudFab Size="Size.Small"
                            Label="Editar"
                            hidden="@HideButtons"
                            @onclick="@(() => GoToUpdate(context.Item.Id))"
                            StartIcon="@Icons.Material.Filled.Edit"
                            Color="Color.Success" />

                    <MudFab Size="Size.Small"
                            Label="Excluir"
                            hidden="@HideButtons"
                            @onclick="@(() => DeleteProfessorAsync(context.Item))"
                            StartIcon="@Icons.Material.Filled.Delete"
                            Color="Color.Error" />
                </MudStack>
                </CellTemplate>

            </TemplateColumn>

    </Columns>



</MudDataGrid>

